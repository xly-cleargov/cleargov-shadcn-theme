{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["lib/**/*", "components/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
} 